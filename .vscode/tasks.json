  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "build:tailwind",
      "type": "shell",
      "command": "npm run build:tailwind",
      "isBackground": true,
      "problemMatcher": [],
      "watchOptions": {
        "watchFile": "task",
        "watchDirectory": "task",
        "watchIgnore": ["**/.git/**", "**/node_modules/**"]
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
